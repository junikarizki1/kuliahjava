package javaapplication1;

import javax.swing.JOptionPane;
import java.util.Scanner;

/**
 *
 * @author Mahasiswa
 */
public class JavaApplication1 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        
        //shortcut bikin perintah print adl : ketik sout, tekan enter spasi, kemudia tab
        //shortcut bikin JOptionPane adl : ketik jopt, tekan enter spasi, kemudia tab
        System.err.println("Mamang"); //println untuk membuat satu enter kebawah, .err. untuk tulisan warna merah
        System.out.print("halo"); //print tidak memberikan satu enter kebawah, tulisan akan nyambung
        System.out.println("sambung");
        
        System.out.print("Nama    : "); System.out.println("Miko Rizki");
        System.out.print("NIM     : "); System.out.println("221103811");
        System.out.print("Kelas   : "); System.out.println("4 A22");
        JOptionPane.showMessageDialog(null, "Do You Want to Exit?"); //buat bikin 
        
        //Membuat input, buat perintah import java.util.Scanner; taroh diatas sana
        Scanner input = new Scanner(System.in);
        String nama;
        System.out.print("Masukkan Nama Anda : ");
        nama = input.nextLine();
        System.out.println("Nama saya adalah "+nama);      
    }
    
}
